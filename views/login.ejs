<%- include('parts/header') %>
<div class="container h-100">
  <div class="row d-flex justify-content-center align-items-center h-100">
    <div class="col-lg-12 col-xl-11">
      <div class="card text-black" style="border-radius: 25px;">
        <div class="card-body p-md-5">
          <div class="row justify-content-center">
            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

              <form method="post">
                  <div class="form-group">
                    <label for="exampleInputEmail1">Email address</label>
                    <input type="email" name="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
                    <% let emailerror = loginValidationErrors.find(error => error.path === 'email') %>
                        <% if (emailerror) {  %>
                        <p class="alert alert-danger"><%= emailerror.msg %></p>
                        <% } %>                    </div>
                  <div class="form-group">
                    <label for="exampleInputPassword1=">Password</label>
                    <input type="password" name= 'password' class="form-control" id="exampleInputPassword1" placeholder="Password">
                    <% let passerror = loginValidationErrors.find(error => error.path === 'password') %>
                    <% if (passerror) {  %>
                    <p class="alert alert-danger"><%= passerror.msg %></p>
                    <% } %> 
                  </div>
                 
                  <button type="submit" class="btn btn-primary">Submit</button>
              </form>
              <br>
              <% if (authError){ %>
              <p class="alert alert-danger"><%= authError %></p>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('parts/footer') %>